<div class="container mt-3">
  <div class="row">
    <div class="col-6 mx-auto">
      <ul class="list-unstyled">
        <% @articles.each do |article| %>
          <li id="article-<%= article.id %>" class="list-group-item">
            <%= link_to article.title, article_path(article), class: 'no-underline' %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
